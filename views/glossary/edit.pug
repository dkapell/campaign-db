extends ../layout

include ../partials/editor

block content
    .row
        .col-lg-8.offset-lg-2
            .card
                .card-header= 'Edit Entry: ' + glossary_entry.name
                .card-body
                    form.form.needs-validation#glossaryEntryForm(method="POST" action="/glossary/" + glossary_entry.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='glossary_entry[id]',value=glossary_entry.id)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
    script(src='/javascripts/glossary.js')
