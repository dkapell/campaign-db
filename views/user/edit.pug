extends ../layout

include ../partials/editor
include ../partials/imageViewer

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header= 'Edit User: ' + user.name
                .card-body
                    form.form.needs-validation#userForm(method="POST" action="/user/" + user.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='user[id]',value=user.id)
                        include ./_form.pug
append styles
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.3.4/dist/css/datepicker-bs5.min.css')
append scripts
    script(src='https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.3.4/dist/js/datepicker-full.min.js')
    script(src='/javascripts/image-upload.js')
    script(src='/javascripts/validator.js')
    script(src='/javascripts/user.js')
    script(src='/javascripts/documentation.js')
    script.
        $(function(){
            $('.select2').select2({
                theme:'bootstrap-5',
                minimumResultsForSearch: 6,
                width:'resolve'
            });
        });

