extends ../layout

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header= 'Edit Skill Type: ' + skill_type.name
                .card-body
                    form.form.needs-validation(method="POST" action="/skill_type/" + skill_type.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='skill_type[id]',value=skill_type.id)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
