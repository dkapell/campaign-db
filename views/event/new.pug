extends ../layout

include ../partials/editor
include ../partials/event

block content
    .row
        .col-lg-10.offset-lg-1
            .card
                .card-header
                    if clone
                        | Clone Event - #{clone}
                    else
                        | New Event
                .card-body
                    form.form.needs-validation#eventForm(method="POST" action="/event" novalidate)
                        input(type="hidden", name='_csrf',value=csrfToken)
                        include ./_form.pug
append styles
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.3.4/dist/css/datepicker-bs5.min.css')
append scripts
    script(src='https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.3.4/dist/js/datepicker-full.min.js')
    script(src='/javascripts/validator.js')
    script(src='/javascripts/event.js')
