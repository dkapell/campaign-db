include ../../partials/editor

block content
    form.form.needs-validation#sceneFeedbackForm(
        method="POST"
        action=`/event/${event.id}/post_event/${attendance.id}/${scene.id}/feedback/${scene.feedback_id}`
        data-apiurl=`/event/${event.id}/post_event/${attendance.id}/${scene.id}/feedback/${scene.feedback_id}`
        novalidate
    )
        input(type="hidden", name="_method",  value="PUT")
        input(type="hidden", name='_csrf',value=csrfToken)
        input(type="hidden", name='feedback[id]',value=scene.feedback_id)
        include ./_form.pug
