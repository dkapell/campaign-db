extends ../../layout

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header= 'Edit Schedule Busy Type: ' + schedule_busy_type.name
                .card-body
                    form.form.needs-validation(method="POST" action="/admin/schedule_busy_type/" + schedule_busy_type.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='schedule_busy_type[id]',value=schedule_busy_type.id)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
    
