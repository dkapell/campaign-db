extends ../../layout

block content
    a.btn.btn-outline-success.my-2(href='/admin/schedule_report/new')
        span(class="fa fa-plus")
        |  New Schedule Report

    .table-responsive
        .col-sm-6.offset-sm-3.text-center#tableLoading
            .spinner-border.m-5(role="status" style="width: 3rem; height: 3rem;")
                .visually-hidden Table is Loading
        table.table.table-striped.data-table.table-hover.my-3.dt-responsive.nowrap.table-sm.w-100(
            style="display: none"
            )
            thead
                tr
                    th
                    th(data-priority="1") Name
                    if checkPermission('admin')
                        th

            tbody
                for schedule_report in schedule_reports
                    tr(class='clickable-row', data-click-object='admin/schedule_report' data-click-id=schedule_report.id)
                        td.dtr-control
                        td= schedule_report.name
                        if checkPermission('admin')
                            td.text-end
                                a.btn.btn-outline-danger.btn-xs.delete-btn.mx-2(
                                    title='Delete Schedule Busy Type'
                                    data-bs-toggle='tooltip'
                                    role="button",
                                    url=`/admin/schedule_report/${schedule_report.id}`,
                                    data-back='/admin/schedule_report'
                                )
                                    i.fas.fa-trash.fa-fw



append scripts
    script(src='/javascripts/data-table.js')
    script.
        $(function(){
            $('[data-bs-toggle="tooltip"]').tooltip({
                delay: { 'show': 500, 'hide': 100 },
                placement:'auto'
            });
        });


