extends ../../layout

include ../../partials/editor

block content
    .row
        .col-sm-10.offset-sm-1
            .card
                .card-header= 'Edit Campaign: ' + campaign.name
                .card-body
                    form.form.needs-validation(method="POST" action="/admin/campaign/" + campaign.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='campaign[id]',value=campaign.id)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
    script.
        $(function(){
             $('.select2').select2({
                theme:'bootstrap-5',
                minimumResultsForSearch: 6,
                width:'resolve'
            });
        });
