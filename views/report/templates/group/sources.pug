block content
    .card.mb-3
        h5.py-2.card-header(data-bs-toggle="collapse" href="#report-sources-body" aria-expanded="false") Sources
            span.badge.rounded-pill.text-bg-danger.mx-2
                -
                    const typeCount = _.keys(sources).length
                    let count = 0
                    for (const key in sources){
                        count += _.keys(sources[key]).length
                    }
                if (typeCount > 1)
                    | #{typeCount} Types | #{count} Total
                else
                    | #{count} Total

            span.float-end.ps-2
                i.fa.fa-chevron-up
                i.fa.fa-chevron-down

        ul.card-text.list-group.list-group-flush.collapse#report-sources-body
            if !_.keys(sources).length
                li.py-2.list-group-item
                    i No sources
            each list, type in sources
                li.py-2.list-group-item
                    strong= capitalize(type)
                each value, source in list
                    li.py-2.ps-4.list-group-item=source
                        span.ms-1.float-end.text-small
                            if characters.length === value.length
                                i All
                            else
                                -
                                    const charNames = value.map(e => {
                                        return (_.findWhere(characters, {id:e})).name
                                    });
                                = charNames.join(', ')
