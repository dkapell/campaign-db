extends ../layout

include ../partials/editor
include ../partials/skills

block content
    .row
        .col-sm-10.offset-sm-1
            .card
                .card-header New Skill Source
                .card-body
                    form.form.needs-validation#sourceForm(method="POST" action="/skill_source" novalidate)
                        input(type="hidden", name='_csrf',value=csrfToken)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
    script(src='/javascripts/skill.js')
    script.
        $(function(){
             $('.select2').select2({
                theme:'bootstrap-5',
                minimumResultsForSearch: 6,
                width:'resolve'
            });
        });
