extends ../../layout
include ../../partials/editor

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header New Location
                .card-body
                    form.form.needs-validation(method="POST" action="/admin/location" novalidate)
                        input(type="hidden", name='_csrf',value=csrfToken)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
    script(src='/javascripts/tag.js')
    script.
        $(function(){

            $('.select2').select2({
                theme:'bootstrap-5',
                minimumResultsForSearch: 6,
                width:'resolve'
            });
        });
