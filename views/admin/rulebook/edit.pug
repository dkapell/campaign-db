extends ../../layout

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header= 'Edit Rulebook: ' + rulebook.name
                .card-body
                    form.form.needs-validation(method="POST" action="/admin/rulebook/" + rulebook.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='rulebook[id]',value=rulebook.id)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
    script.
        $(function(){
             $('.select2').select2({
                theme:'bootstrap-5',
                minimumResultsForSearch: 6,
                width:'resolve'
            });
        });
