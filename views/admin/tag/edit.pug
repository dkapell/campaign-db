extends ../../layout

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header= 'Edit Tag: ' + tag.name
                .card-body
                    form.form.needs-validation(method="POST" action="/admin/tag/" + tag.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='tag[id]',value=tag.id)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
    
