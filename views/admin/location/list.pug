extends ../../layout
include ../../partials/image

block content
    a.btn.btn-outline-success.my-2(href='/admin/location/new')
        span(class="fa fa-plus")
        |  New Location

    .row.my-2
        .col
            .alert.alert-warning
                | Removing or modifying Locations will cause the schedule for any scheduled events to become read-only.
    .table-responsive
        .col-sm-6.offset-sm-3.text-center#tableLoading
            .spinner-border.m-5(role="status" style="width: 3rem; height: 3rem;")
                .visually-hidden Table is Loading
        table.table.table-striped.data-table.table-hover.my-3.dt-responsive.nowrap.table-sm.w-100.table-orderable(
            style="display: none"
            data-orderable-object='admin/location'
            data-csrf=csrfToken
            )
            thead
                tr
                    th
                    th.sort-handle
                    th Order
                    th(data-priority="1") Name
                    th Multiple Scenes?
                    th Combat?
                    th Outdoors?
                    th Special?
                    th Active?
                    th Tags
                    th Image
                    if checkPermission('admin')
                        th

            tbody
                for location in locations
                    tr(class='clickable-row', data-click-object='admin/location' data-click-id=location.id)
                        td.dtr-control
                        td= location.id
                        td= location.display_order
                        td= location.name
                        td= location.multiple_scenes?'Yes':'No'
                        td= location.combat?'Combat':'Non-Combat'
                        td= location.outdoors?'Outdoors':'Indoors'
                        td= location.special?'Yes':'No'
                        td= location.active?'Yes':'No'
                        td
                            each tag in location.tags
                                .badge.text-bg-info.mx-1= tag.name
                        td
                            if location.image
                                - const content = `<img class="img-fluid image-container" src="${location.image.thumbnailUrl}">`;
                                a.btn.btn-outline-info.btn-xs.me-1.img-display-btn.action-btn(
                                    tabindex="0"
                                    role="button"
                                    data-bs-toggle="popover"
                                    data-bs-content=content
                                    data-bs-html="true"
                                    title=`${location.name} (expand)`
                                    data-imageurl=location.image.upload.url
                                    data-imagename=location.image.upload.name
                                )
                                    i.fas.fa-image
                        if checkPermission('admin')
                            td.text-end
                                a.btn.btn-outline-danger.btn-xs.delete-btn.mx-2(
                                    role="button",
                                    url=`/admin/location/${location.id}`,
                                    data-back='/admin/location'
                                    data-csrf=csrfToken
                                )
                                    i.fas.fa-trash.fa-fw

    +imageModal()

append scripts
    script(src='/javascripts/data-table.js')
    script.
        $(function(){
            $('[data-bs-toggle="tooltip"]').tooltip({
                delay: { 'show': 500, 'hide': 100 },
                placement:'auto'
            });
            $('body').popover({
                trigger: 'hover',
                selector: '[data-bs-toggle="popover"]'
            });
        });


