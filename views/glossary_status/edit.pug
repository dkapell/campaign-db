extends ../layout

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header= 'Edit Status: ' + glossary_status.name
                .card-body
                    form.form.needs-validation(method="POST" action="/glossary_status/" + glossary_status.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='glossary_status[id]',value=glossary_status.id)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
