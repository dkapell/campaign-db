head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport",content="width=device-width, initial-scale=1 shrink-to-fit=no")
    meta(name="description",content="Campaign Database")
    meta(name="author",content="Dave Kapell")
    if currentCampaign.favicon
        link(rel="icon",href=currentCampaign.favicon.url)
    title= title
    block styles
        if cssTheme
            link(rel='stylesheet' href=`/stylesheets/themes/${cssTheme}/theme.css`)
        else
            link(rel = 'stylesheet' href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")

        -
            let fonts = [];
            if (currentCampaign.body_font && currentCampaign.body_font !== ''){
                fonts.push(`${currentCampaign.body_font.replace(/\s+/, '+')}:400,400i,700,700i`);
            }
            if (currentCampaign.header_font && currentCampaign.header_font !== ''){
                fonts.push(`${currentCampaign.header_font.replace(/\s+/, '+')}:400,700`);
            }
        if fonts.length
            link(rel="stylesheet" href=`https://fonts.googleapis.com/css?family=${fonts.join('|')}`)

        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,700|Lato:400,400i,700,700i")

        link(rel='stylesheet' href='https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css')
        link(rel='stylesheet' href='https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css')
        link(rel='stylesheet' href='https://cdn.datatables.net/fixedheader/3.4.0/css/fixedHeader.dataTables.min.css')
        link(rel='stylesheet' href='https://cdn.datatables.net/rowreorder/1.4.1/css/rowReorder.dataTables.min.css')

        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css')
        link(rel="stylesheet" href='https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css')

        link(rel='stylesheet' href='/stylesheets/style.css')
        if cssTheme
            link(rel='stylesheet' href=`/stylesheets/themes/${cssTheme}/style.css`)
        if currentCampaign.body_font && currentCampaign.body_font !== ''
            style.
                body, .popover {
                    font-family: #{currentCampaign.body_font}, sans-serif;
                }

        if currentCampaign.header_font && currentCampaign.header_font !== ''
            style.
                .lead, h1, h2, h3, h4, h5, .blockquote, .navbar{
                    font-family:  #{currentCampaign.header_font}, sans-serif;
                }
        link(rel='stylesheet' href=`/css`)
