.row.my-2
    .col
        label.control-label(for="skill_source_type_name") Name
        input.form-control(type="text",placeholder="Name",name="skill_source_type[name]",value=skill_source_type.name,id='skill_source_type_name',required)
        div.invalid-feedback Please choose a valid name

.row.my-2
    .col
        label.control-label(for="skill_source_type_category") Skill Source Type Group (blank for none)
        input.form-control#skill_source_type_group(
            type="text"
            placeholder="Group"
            name="skill_source_type[category]"
            value=skill_source_type.category
        )

.row.my-2
    .col
        label.control-label(for="skill_source_type_num_free") Free Purchases from this Type or Group
        input.form-control(type="number",placeholder="Number",name="skill_source_type[num_free]",value=skill_source_type.num_free,id='skill_source_type_num_free',required)
        .form-text (usually 0 or 1)
        div.invalid-feedback Please choose a valid number of purchases

    .col
        label.control-label(for="skill_source_type_max_sources") Maximum # of Sources from this Type
        input.form-control(type="number",placeholder="Number",name="skill_source_type[max_sources]",value=skill_source_type.max_sources,id='skill_source_type_max_sources' required)
        .form-text (0 for unlimited)

    .col.group-details
        label.control-label(for="skill_source_type_max_sources") Maximum # of Sources from this Group
        input.form-control(type="number",placeholder="Number",name="skill_source_type[max_category]",value=skill_source_type.max_category,id='skill_source_type_max_category' required)
        .form-text (0 for unlimited)


.row.my-2
    .col
        .form-check.form-switch
            input.form-check-input#skill_source_type_display_on_sheet(type="checkbox", name="skill_source_type[display_on_sheet]", checked=skill_source_type.display_on_sheet)
            label.form-check-label(for="skill_source_type_display_on_sheet") Display in list of sources on character sheets
.row.my-2
    .col
        .form-check.form-switch
            input.form-check-input#skill_source_type_display_in_header(type="checkbox", name="skill_source_type[display_in_header]", checked=skill_source_type.display_in_header)
            label.form-check-label(for="skill_source_type_display_in_header") Display in character sheet header
if currentCampaign.display_schedule && currentCampaign.schedule_players
    .row.my-2
        .col
            .form-check.form-switch
                input.form-check-input#skill_source_type_on_scene_user_picker(type="checkbox", name="skill_source_type[on_scene_user_picker]", checked=skill_source_type.on_scene_user_picker)
                label.form-check-label(for="skill_source_type_on_scene_user_picker") Display on player picker in scene editor

on_scene_user_picker
.row.my-2
    .col
        button.btn.btn-primary(type="submit")= skill_source_type.id?'Update':'Create'
        a.btn.btn-link(href="/skill_source_type") Cancel


