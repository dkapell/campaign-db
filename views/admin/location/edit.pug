extends ../../layout
include ../../partials/editor

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header= 'Edit Location: ' + location.name
                .card-body
                    form.form.needs-validation(method="POST" action="/admin/location/" + location.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='location[id]',value=location.id)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
    script.
        $(function(){

            $('.select2').select2({
                theme:'bootstrap-5',
                minimumResultsForSearch: 6,
                width:'resolve'
            });
        });
    script(src='/javascripts/tag.js')
