extends ../layout

block content
    .row.my-2
        .col
            select.form-select.complex-select2#report_group_character_picker(name="characters" data-placeholder='Select Character' multiple)
                option
                for character in characters
                    option(
                        value=character.id
                        title=character.name
                        data-text=`<strong>${character.name}</strong> (<i>${character.user.name}</i>)`
                        data-html=`<span class='float-end badge text-bg-info'>${character.user.type}</span><strong>${character.name}</strong> (<i>${character.user.name}</i>)`
                    ) #{character.name} (#{character.user.name})

    .row.my-1
        .col-md#report-attributes
        .col-md#report-diagnose
    .row.my-1
        .col-md#report-styles
        .col-md#report-languages
    .row.my-1
        .col#report-traits
    .row.my-2
        .col#report-skills

append scripts
    script(src='/javascripts/templates/report/group/attributes.js')
    script(src='/javascripts/templates/report/group/diagnose.js')
    script(src='/javascripts/templates/report/group/styles.js')
    script(src='/javascripts/templates/report/group/languages.js')
    script(src='/javascripts/templates/report/group/traits.js')
    script(src='/javascripts/templates/report/group/skills.js')

    script(src='/javascripts/report.js')
