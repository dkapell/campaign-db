extends ../../layout

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header= `Edit Timeslot: ${timeslot.name}`
                .card-body
                    form.form.needs-validation(method="POST" action="/admin/timeslot/" + timeslot.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='timeslot[id]',value=timeslot.id)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
    script.
        $(function(){
             $('.select2').select2({
                theme:'bootstrap-5',
                minimumResultsForSearch: 6,
                width:'resolve'
            });
        });

