extends ../layout

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header= 'Edit Usage: ' + skill_usage.name
                .card-body
                    form.form.needs-validation(method="POST" action="/skill_usage/" + skill_usage.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='skill_usage[id]',value=skill_usage.id)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
