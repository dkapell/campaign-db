                            a(href=`/scene/${prereq.id}`)
                                i.fas.fa-theater-masks.me-1
                                =prereq.name
                            if pidx < scene.prereqs.length-1
                                span.ms-0.me-2 ,
            if scene.coreqs && scene.coreqs.length
                .row.my-1
                    .col
                        strong.me-2 Co-reqs
