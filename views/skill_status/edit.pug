extends ../layout

block content
    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header= 'Edit Status: ' + skill_status.name
                .card-body
                    form.form.needs-validation(method="POST" action="/skill_status/" + skill_status.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='skill_status[id]',value=skill_status.id)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
    script.
        $(function(){
             $('.select2').select2({
                theme:'bootstrap4',
                minimumResultsForSearch: 6,
                width:'resolve'
            });
        });
