                        ul.list-unstyled
                            each status in ['confirmed', 'suggested']
                                if scene.players[status]
                                    each user in _.sortBy(scene.players[status], (user)=>{return user.character?user.character.name:user.name})
                                        li
                                            if status !== 'confirmed'
                                                +sceneStatusBadge(status, true)
                                            +playerEntry(user)

